# Environment variables for Docker Compose
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=kursor
POSTGRES_USER=kursor_user
POSTGRES_PASSWORD=kursor_password
DATABASE_URL=postgresql://kursor_user:kursor_password@postgres:5432/kursor

# API Keys
RAPIDAPI_KEY=your_judge0_rapidapi_key_here
RESEND_API_KEY=your_resend_api_key_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long

# Email Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Gateway Configuration
GATEWAY_SECRET=your_gateway_secret_key_here

# Production URLs (for cloud deployment)
# EXECUTION_SERVICE_URL=https://execution.yourdomain.com
# COMMUNICATION_SERVICE_URL=https://communication.yourdomain.com
# SNIPPET_SERVICE_URL=https://snippets.yourdomain.com
# USER_SERVICE_URL=https://users.yourdomain.com
